# Etapa 1: build
FROM node:20-alpine AS builder

WORKDIR /app

# Instala as dependências do sistema operacional necessárias para o Chromium Headless/Lighthouse.
# O Puppeteer/Lighthouse precisa dessas libs para executar o navegador.
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    harfbuzz \
    ttf-freefont \
    udev \
    # Dependências comuns para processos headless em Alpine
    libstdc++ \
    libgcc

# Copia os arquivos do projeto
COPY package*.json ./
COPY tsconfig*.json ./
COPY . .

# Instala as dependências do Node.js
# 'unsafe-perm' é frequentemente necessário para o Puppeteer/Chromium instalar
# corretamente as dependências no ambiente Alpine/Docker.
# Mantive o legacy-peer-deps para consistência com o seu comando original.
RUN npm install --legacy-peer-deps --unsafe-perm=true

# Compila o projeto
RUN npm run build

# Etapa 2: imagem final
FROM node:20-alpine

WORKDIR /app

# CRÍTICO: Instala o Chromium e dependências na imagem final
# O Chromium é necessário em runtime para o Lighthouse funcionar
RUN apk add --no-cache \
    chromium \
    chromium-chromedriver \
    nss \
    freetype \
    freetype-dev \
    harfbuzz \
    ca-certificates \
    ttf-freefont \
    ttf-dejavu \
    ttf-liberation \
    font-noto-emoji \
    udev \
    ttf-opensans \
    && echo "Chromium instalado"

# Encontrar o caminho real do Chromium e criar link simbólico em /usr/bin/chromium
# No Alpine, o Chromium geralmente está em /usr/bin/chromium-browser
RUN echo "Procurando Chromium..." && \
    CHROME_BIN=$(command -v chromium-browser 2>/dev/null || \
                 command -v chromium 2>/dev/null || \
                 find /usr -name "chromium*" -type f -executable 2>/dev/null | grep -v ".so" | head -1) && \
    if [ -z "$CHROME_BIN" ]; then \
      echo "ERRO: Chromium não encontrado após instalação!" && \
      echo "Listando pacotes instalados relacionados:" && \
      apk list --installed | grep -i chromium && \
      echo "Procurando todos os arquivos chromium:" && \
      find /usr -name "*chromium*" 2>/dev/null && \
      echo "Listando /usr/bin:" && \
      ls -la /usr/bin/ | grep -i chromium || echo "Nenhum chromium em /usr/bin" && \
      exit 1; \
    fi && \
    echo "✓ Chromium encontrado em: $CHROME_BIN" && \
    ls -lh "$CHROME_BIN" && \
    echo "Criando link simbólico de $CHROME_BIN para /usr/bin/chromium" && \
    mkdir -p /usr/bin && \
    ln -sf "$CHROME_BIN" /usr/bin/chromium && \
    chmod +x /usr/bin/chromium && \
    echo "Verificando link simbólico criado:" && \
    ls -lh /usr/bin/chromium && \
    echo "Testando execução do Chromium:" && \
    /usr/bin/chromium --version && \
    echo "✓ Chromium configurado com sucesso!"

# Define variável de ambiente para o caminho do Chromium
# O código tentará encontrar automaticamente o caminho correto
ENV CHROME_PATH=/usr/bin/chromium
ENV CHROME_BIN=/usr/bin/chromium
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# Copia apenas o que é necessário da imagem de build
COPY --from=builder /app/package*.json ./
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/node_modules ./node_modules

# Expõe a porta
EXPOSE 3001

# Comando para iniciar a aplicação
CMD ["node", "dist/src/main.js"]