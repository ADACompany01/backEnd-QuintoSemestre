# Etapa 1: build
FROM node:20-alpine AS builder

WORKDIR /app

# Instala as dependências do sistema operacional necessárias para o Chromium Headless/Lighthouse.
# O Puppeteer/Lighthouse precisa dessas libs para executar o navegador.
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    harfbuzz \
    ttf-freefont \
    udev \
    # Dependências comuns para processos headless em Alpine
    libstdc++ \
    libgcc

# Copia os arquivos do projeto
COPY package*.json ./
COPY tsconfig*.json ./
COPY . .

# Instala as dependências do Node.js
# 'unsafe-perm' é frequentemente necessário para o Puppeteer/Chromium instalar
# corretamente as dependências no ambiente Alpine/Docker.
# Mantive o legacy-peer-deps para consistência com o seu comando original.
RUN npm install --legacy-peer-deps --unsafe-perm=true

# Compila o projeto
RUN npm run build

# Etapa 2: imagem final
FROM node:20-alpine

WORKDIR /app

# CRÍTICO: Instala o Chromium e dependências na imagem final
# O Chromium é necessário em runtime para o Lighthouse funcionar
RUN apk add --no-cache \
    chromium \
    chromium-chromedriver \
    nss \
    freetype \
    harfbuzz \
    ttf-freefont \
    udev \
    libstdc++ \
    libgcc \
    ca-certificates \
    ttf-dejavu \
    && echo "Chromium instalado"

# Verificar onde o Chromium foi instalado e criar link simbólico
RUN CHROME_BIN=$(which chromium 2>/dev/null || which chromium-browser 2>/dev/null || find /usr -name "chromium*" -type f 2>/dev/null | head -1) && \
    echo "Chromium encontrado em: $CHROME_BIN" && \
    if [ -n "$CHROME_BIN" ] && [ "$CHROME_BIN" != "/usr/bin/chromium" ]; then \
      echo "Criando link simbólico de $CHROME_BIN para /usr/bin/chromium" && \
      ln -sf "$CHROME_BIN" /usr/bin/chromium; \
    fi && \
    ls -la /usr/bin/chromium* 2>/dev/null || echo "Nenhum arquivo chromium encontrado em /usr/bin" && \
    (test -f /usr/bin/chromium || test -x /usr/bin/chromium-browser) || (echo "ERRO: Chromium não encontrado após instalação!" && apk list chromium && exit 1) && \
    echo "Chromium verificado com sucesso"

# Define variável de ambiente para o caminho do Chromium
# O código tentará encontrar automaticamente o caminho correto
ENV CHROME_PATH=/usr/bin/chromium
ENV CHROME_BIN=/usr/bin/chromium
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# Copia apenas o que é necessário da imagem de build
COPY --from=builder /app/package*.json ./
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/node_modules ./node_modules

# Expõe a porta
EXPOSE 3001

# Comando para iniciar a aplicação
CMD ["node", "dist/src/main.js"]